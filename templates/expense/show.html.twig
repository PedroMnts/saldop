{% extends 'base.html.twig' %}

{% block title %}Expense Details - Saldop{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2>{{ expense.description }}</h2>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h5>Amount</h5>
                            <p class="h4 text-success">${{ expense.amount }}</p>
                        </div>
                        <div class="col-md-6">
                            <h5>Category</h5>
                            <p>
                                {% if expense.category %}
                                    <span class="badge bg-secondary">{{ expense.category }}</span>
                                {% else %}
                                    <span class="text-muted">Not specified</span>
                                {% endif %}
                            </p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h5>Date</h5>
                            <p>{{ expense.date|date('F j, Y') }}</p>
                        </div>
                        <div class="col-md-6">
                            <h5>Created</h5>
                            <p>{{ expense.createdAt|date('F j, Y H:i') }}</p>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <a href="{{ path('app_expense_edit', {'id': expense.id}) }}" class="btn btn-warning">Edit</a>
                    <form method="POST" action="{{ path('app_expense_delete', {'id': expense.id}) }}" style="display:inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ expense.id) }}">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
                    </form>
                    <a href="{{ path('app_expense_index') }}" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
